#!/bin/sh

# Person Kernel Tweak Application
apply_kernel_tweak() {
  # Define the log file path
  local log_file="/storage/emulated/0/kerneltweak.log"

  # Function to write logs
  write_log() {
    echo " â€¢> $1 at $(date +"%d-%m-%Y %r")" >> "$log_file"
  }

  # Virtual Memory Optimization
  write_log "Person Kernel Tweak Patching Started"

  # System parameters
  declare -A sys_params=(
    ["/sys/module/kernel/parameters/panic"]="0"
    ["/proc/sys/kernel/panic_on_oops"]="0"
    ["/sys/module/kernel/parameters/panic_on_warn"]="0"
    ["/sys/module/kernel/parameters/pause_on_oops"]="0"
    ["/sys/module/lowmemorykiller/parameters/enable_adaptive_lmk"]="0"
    ["/proc/sys/vm/page-cluster"]="0"
    ["/sys/block/zram0/max_comp_streams"]="8"
    ["/sys/module/zswap/parameters/enabled"]="1"
    ["/proc/sys/net/ipv4/tcp_low_latency"]="1"
    ["/proc/sys/vm/panic_on_oom"]="0"
    ["/proc/sys/vm/swap_ratio_enable"]="Y"
    ["/proc/sys/vm/overcommit_ratio"]="100"
    ["/proc/sys/vm/dirty_background_ratio"]="1"
    ["/proc/sys/vm/dirty_ratio"]="3"
    ["/proc/sys/vm/vfs_cache_pressure"]="20"
    ["/proc/sys/vm/extfrag_threshold"]="750"
    ["/proc/sys/vm/watermark_boost_factor"]="15000"
    ["/sys/kernel/mm/lru_gen/min_ttl_ms"]="5000"
    ["/proc/sys/vm/stat_interval"]="20"
    ["/proc/sys/vm/watermark_scale_factor"]="32"
    ["/sys/module/kprofiles/parameters/mode"]="2"
    ["/proc/sys/kernel/sched_min_task_util_for_colocation"]="20"
    ["/proc/sys/vm/dirty_writeback_centisecs"]="6000"
    ["/proc/sys/vm/dirty_expire_centisecs"]="6000"
    ["/proc/sys/vm/extra_free_kbytes"]="27337"
    ["/proc/sys/vm/min_free_kbytes"]="6422"
    ["/proc/sys/vm/oom_kill_allocating_task"]="0"
    ["/sys/kernel/ccci/debug"]="0"
    ["/proc/sys/kernel/sched_autogroup_enabled"]="0"
    ["/sys/module/subsystem_restart/parameters/enable_ramdumps"]="0"
    ["/sys/module/subsystem_restart/parameters/enable_mini_ramdumps"]="0"
    ["/proc/sys/kernel/timer_migration"]="1"
    ["/sys/devices/system/cpu/rq-stats/hotplug_disable"]="1"
    ["/proc/sys/kernel/sched_walt_init_task_load_pct"]="5"
    ["/proc/sys/kernel/sched_freq_aggregate_threshold"]="1000"
    ["/sys/module/cpu_boost/parameters/input_boost_freq"]="2300000"
    ["/sys/module/cpu_boost/parameters/input_boost_ms"]="60"
    ["/sys/module/cpu_input_boost/parameters/input_boost_duration"]="140"
    ["/sys/module/cpu_input_boost/parameters/dynamic_stune_boost_duration"]="2300"
    ["/sys/module/cpu_input_boost/parameters/dynamic_stune_boost"]="140"
    ["/proc/sys/kernel/sysctl_writes_strict"]="0"
    ["/proc/sys/kernel/sched_tunable_scaling"]="1"
    ["/sys/block/mmcblk0rpmb/queue/scheduler"]="deadline"
    ["/sys/block/mmcblk0/queue/scheduler"]="deadline"
    ["/sys/block/mmcblk1/queue/scheduler"]="deadline"
    ["/sys/block/mmcblk0/queue/read_ahead_kb"]="1024"
    ["/sys/block/mmcblk1/queue/read_ahead_kb"]="1024"
    ["/dev/cpuset/background/cpus"]="0-2"
    ["/dev/cpuset/top-app/cpus"]="0-7"
    ["/dev/cpuset/foreground/cpus"]="3,4-6,7"
    ["/dev/stune/foreground/schedtune.boost"]="0"
    ["/dev/stune/rt/schedtune.boost"]="40"
    ["/dev/stune/nnapi-hal/schedtune.boost"]="1"
    ["/dev/cpuset/system-background/cpus"]="0-1"
    ["/dev/stune/top-app/schedtune.boost"]="70"
    ["/dev/stune/top-app/schedtune.sched_boost_no_override"]="1"
    ["/proc/sys/fs/lease-break-time"]="5"
    ["/proc/sys/kernel/random/read_wakeup_threshold"]="2048"
    ["/proc/sys/kernel/random/write_wakeup_threshold"]="2048"
  )

  # Apply system parameters
  for param in "${!sys_params[@]}"; do
    echo "${sys_params[$param]}" > "$param"
  done

  # Scheduler features
  declare -a sched_features=(
    "NO_GENTLE_FAIR_SLEEPERS"
    "NO_HRTICK"
    "NO_DOUBLE_TICK"
    "NO_RT_RUNTIME_SHARE"
    "NEXT_BUDDY"
    "NO_TTWU_QUEUE"
    "UTIL_EST"
    "ARCH_CAPACITY"
    "ARCH_POWER"
  )

  # Apply scheduler features
  for feature in "${sched_features[@]}"; do
    echo "$feature" > /sys/kernel/debug/sched_features
  done

  # Permissions and other settings
  chmod 0777 /proc/sys/kernel/perf_cpu_time_max_percent
  echo "0" > /proc/sys/kernel/perf_cpu_time_max_percent
  echo "0" > /proc/sys/kernel/nmi_watchdog
  chmod 0777 /proc/sys/kernel/sysctl_writes_strict
  chmod 0777 /proc/sys/kernel/sched_tunable_scaling
  chmod 777 /sys/block/mmcblk0rpmb/queue/scheduler
  chmod 777 /sys/block/mmcblk*/queue/scheduler

  # Desol adjustments
  for stune in /dev/stune/*; do
    echo "0" > "${stune}/schedtune.prefer_idle"
    echo "0" > "${stune}/schedtune.colocate"
    echo "0" > "${stune}/cgroup.clone_children"
  done

  # Top app adjustments
  for ta in /dev/cpuset/*/top-app; do
    echo max > "${ta}/uclamp.max"
    echo 10 > "${ta}/uclamp.min"
    echo 1 > "${ta}/uclamp.boosted"
    echo 1 > "${ta}/uclamp.latency_sensitive"
  done

  # Foreground adjustments
  for fd in /dev/cpuset/*/foreground; do
    echo 50 > "${fd}/uclamp.max"
    echo 0 > "${fd}/uclamp.min"
    echo 0 > "${fd}/uclamp.boosted"
    echo 0 > "${fd}/uclamp.latency_sensitive"
  done

  # Background adjustments
  for bd in /dev/cpuset/*/background; do
    echo max > "${bd}/uclamp.max"
    echo 20 > "${bd}/uclamp.min"
    echo 0 > "${bd}/uclamp.boosted"
    echo 0 > "${bd}/uclamp.latency_sensitive"
  done

  # System background adjustments
  for sb in /dev/cpuset/*/system-background; do
    echo 40 > "${sb}/uclamp.max"
    echo 0 > "${sb}/uclamp.min"
    echo 0 > "${sb}/uclamp.boosted"
    echo 0 > "${sb}/uclamp.latency_sensitive"
  done

  # Apply sysctl settings
  sysctl -w kernel.sched_util_clamp_min_rt_default=0
  sysctl -w kernel.sched_util_clamp_min=128

  # SD card adjustments
  for queue in /sys/block/sd*/queue; do
    echo "deadline" > "${queue}/scheduler"
    echo "0" > "${queue}/iostats"
    echo "0" > "${queue}/add_random"
    echo "0" > "${queue}/nomerges"
    echo "512" > "${queue}/nr_requests"
    echo "2" > "${queue}/rq_affinity"
    echo "0" > "${queue}/rotational"
    echo "1024" > "${queue}/read_ahead_kb"
  done

  # IO scheduler adjustments
  for iosched in /sys/block/sd*/iosched; do
    echo "0" > "${iosched}/slice_idle"
    echo "0" > "${iosched}/slice_idle_us"
    echo "0" > "${iosched}/group_idle"
    echo "0" > "${iosched}/group_idle_us"
  done

  # Loop device adjustments
  for lqueue in /sys/block/loop*/queue; do
    echo "none" > "${lqueue}/scheduler"
    echo "1024" > "${lqueue}/read_ahead_kb"
  done

  # Loop IO scheduler adjustments
  for liosched in /sys/block/loop*/iosched; do
    echo "0" > "${liosched}/slice"
        echo "0" > "${liosched}/slice_idle"
    echo "0" > "${liosched}/slice_idle_us"
  done

  # Awol adjustments
  sleep 30
  echo '-1' > /proc/sys/kernel/sched_rt_runtime_us
  echo '100000' > /proc/sys/kernel/sched_latency_ns
  echo '3' > /proc/sys/vm/drop_caches
  echo '0' > /proc/sys/kernel/sched_wakeup_granularity_ns
  echo '100000' > /proc/sys/kernel/sched_min_granularity_ns
  echo '10000000' > /proc/sys/kernel/sched_migration_cost_ns
  echo '50' > /proc/sys/kernel/sched_nr_migrate
  echo '0' > /proc/sys/kernel/sched_stune_task_threshold
  echo '1' > /proc/sys/kernel/sched_time_avg_ms
  echo '0' > /proc/sys/kernel/sched_big_task_rotation
  echo '0' > /proc/sys/kernel/sched_sync_hint_enable
  echo '0' > /proc/sys/kernel/sched_isolation_hint
  echo '0' > /proc/sys/kernel/sched_cstate_aware
  echo '0' > /proc/sys/kernel/sched_child_runs_first
  echo '1' > /proc/sys/kernel/real-root-dev
  echo '0' > /proc/sys/kernel/sched_tunable_scaling
  echo '200' > /proc/sys/vm/swap_ratio
  echo '4000000' > /proc/sys/kernel/sched_cpu_high_irqload
  echo '0' > /proc/sys/kernel/sched_uclamp_util_max
  echo '0' > /proc/sys/kernel/sched_uclamp_util_min
}

# Execute the tweak application
apply_kernel_tweak
